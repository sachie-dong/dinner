/* pages/me/me.wxss */
.me{
  background: #F7F7F7;
  height: 100%;
}

.userinfo {
  width: 100%;
  height: 260rpx;
  border-bottom: 2rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.userinfo>button{
  margin: auto;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 30rpx;
}

.list{
  margin-top: 30rpx;
  background: #fff;
  height:320rpx;
}

.list>view{
  padding-left:40rpx; 
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  border-bottom: 4rpx solid #F7F7F7;
}