@import '../common/common.wxss';
.main{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f7f7f7;
}

/* 就餐人就餐时间 */
.main1{
  height: 230rpx;
  width: 670rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin: 20rpx;
  padding: 0 20rpx;
}
.person{
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 0
}
.person,.time>view{
  padding-left:120rpx; 
}
.person>image{
    position: absolute;
    top: 60rpx;
    left: 44rpx;
}
.time>image{
    position: absolute;
    top: 173rpx;
    left: 44rpx;
}
/* 订单详情 */
.main2{
  height: 610rpx;
  width: 710rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin:0 20rpx;
}
.main2>view{
  line-height: 40rpx;
}
.orders-list{
    position: relative;
    padding:20rpx 20rpx 20rpx 220rpx;
    height: 90rpx;
    border-bottom: 10rpx solid #fff;
    background: #f7f7f7;
    margin: 0;
}
.orders-thumb{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 80rpx;
    height: 80rpx;
}
.orders-list view{
    line-height: 80rpx;
}
.orders-pro-price{
  float: right;
}
.orders-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 95rpx;
    line-height: 95rpx;
    border-top: 1rpx solid #ededed;
}
.orders-footer .orders-footer-total{
    display: inline-block;
    width: 510rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    color: #a55350;
}
.orders-footer .orders-footer-btn{
    display: inline-block;
    width: 240rpx;
    text-align: center;
    color: #fff;
    background: #008ed4;
}
.main3{
  height: 160rpx;
  width: 710rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin:20rpx;
}
.main3>view{
  line-height: 40rpx;
}