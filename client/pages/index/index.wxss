.container{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f7f7f7;
}

.swiper {
 height: 360rpx;
 width: 100%;
}
.swiper image {
 height: 100%;
 width: 100%;
}
.bar{
  display: flex;
  background: white;
  height: 187rpx;
  width: 100%;
  flex-direction: row;
}
.bar view{
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;
  width: 25%;
}
.bar image{
  height: 70rpx;
  width: 70rpx;
}
.bar text{
  font-size:24rpx;
  font-weight: 200;
  line-height: 60rpx;
}
.info{
  display: flex;
  margin: 13rpx 0rpx;
  flex-direction: column;
  background: white;
  color:#666666;
}
.info view{
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #f7f7f7;
  margin-left: 32rpx;
}
.info text{
  line-height: 93rpx;
  font-size: 28rpx;
  padding-right: 80rpx;
}
.info-black{
  color: #000000;
}
.info image{
  margin:20rpx 30rpx 20rpx 0rpx;
  justify-content: right;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 20px;
  transform: rotate(45deg);
  margin-top:30rpx; 
}
.info-bottom{
  background: white;
  height: 70rpx;
}
.info-bottom image{
  margin: 15rpx 32rpx -10rpx 32rpx;
  height: 45rpx;
  width: 45rpx;
}
.info-bottom text{
  font-size: 28rpx;
  margin: 0rpx;
}

