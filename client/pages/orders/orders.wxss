/* pages/ding/ding.wxss */
.main{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f7f7f7;
}
/* tab */
.tab{
  height: 100%;
  width: 100%;
}
.nav{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  font-size: 30rpx;
  background: #fff;
}

.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  color:#000;
  font-weight:bold;
}
.red{
  line-height:100rpx;
  text-align:center;
  color:#008ed4;
  flex:1;
  font-weight:bold;
  border-bottom: 5rpx solid #008ed4;
}
.show{
  display:block;
}
.hidden{
  display:none;
}
/*tab结束  */
.main1{
  height: 490rpx;
  width: 750rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.header{
  padding-left:20rpx; 
  line-height:126rpx;
}
.header-1{
  font-weight: 600;
  font-size: 30rpx;
  padding-left: 20rpx;
  display: inline-block;
}
.header-2{
  float:right;
  padding-right:20rpx;
  color: #646464;
}
.total{
  float: right;
  padding-right:20rpx;
  line-height: 80rpx;

}
.orders-box{
  height: 200rpx;
  margin-left: 20rpx;
  border-bottom:  1rpx solid #ccc;
  border-top:  1rpx solid #ccc;
  padding: 20rpx;
}
.orders-list>text{
  padding-left: 20rpx;
  line-height: 50rpx;
}
.orders-count-num{
  float: right;
  padding-right: 20rpx;
}
.footer{
  margin: 20rpx 20rpx 0 0;
  float: right;
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #ccc;
  text-align: center;
}
.main2{
  height: 460rpx;
